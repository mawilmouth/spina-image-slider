.button-group.extras
  %button.trix-button.trix-button--text.image-slider{ type: 'button', tabindex: -1, title: 'Before/After Image Slider', data: { trix_action: 'image-slider' }}
    <|>
= render partial: 'spina/admin/partables/texts/custom_dialogs'

:css
  .extras{
    margin-bottom: 10px;
  }

  .image-slider{
    font-weight: 700;
  }

  .slider-fields{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .slider-preview{
      padding: 5px;
      margin: 10px 10px 10px 0px;
      max-width: 500px;
      max-height: 400px;
      border: 1px rgb(100,100,100) solid;
      border-radius: 10px;
      background-color: rgb(240,240,240);
      font-size: 10px;
      overflow-y: scroll;
  }

  .slider-markup{
    display: none;
  }

  .slider-show{
    display: none;
  }
